<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ReportsFragment">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/pcSpendCat"
        android:layout_width="match_parent"
        android:layout_height="498dp"
        android:layout_below="@+id/tvLogged"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="64dp"></com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="monospace"
        android:text="Total Transactions Logged"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLogged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="177dp"
        android:fontFamily="serif-monospace"
        android:hint=" 0 Times"
        android:textAlignment="center"
        android:textColor="#875C74"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>